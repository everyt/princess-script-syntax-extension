{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Princess Script",
  "patterns": [
    {
      "include": "#expression"
    }
  ],
  "repository": {
    "expression": {
      "patterns": [
        { "include": "#comment" },
        { "include": "#scene" },
        { "include": "#end" },
        { "include": "#stage" },
        { "include": "#bgm" },
        { "include": "#title" },
        { "include": "#ambience" },
        { "include": "#background" },
        { "include": "#effect" },
        { "include": "#options" },
        { "include": "#change" }
      ]
    },
    "comment": {
      "patterns": [
        {
          "name": "punctuation.definition.comment.princess",
          "begin": "//",
          "end": "\\n"
        }
      ]
    },
    "scene": {
      "patterns": [
        {
          "name": "markup.deleted.diff.princess",
          "begin": "\\b(scene)\\b(\\w*)",
          "beginCapture": {
            "0": {
              "name": "variable.other.object.property.princess"
            }
          }
          "end": ":"
        }
      ]
    },
    "end": {
      "patterns": [
        {
          "name": "markup.deleted.diff.princess",
          "match": "\\b(end)\\b"
        }
      ]
    },
    "stage": {
      "patterns": [
        {
          "name": "markup.changed.princess",
          "begin": "\\b(stage)\\b(\\w*)",
          "beginCapture": {
            "0": {
              "name": "variable.other.object.property.princess"
            }
          }
          "end": ":"
        }
      ]
    },
    "title": {
      "patterns": [
        {
          "name": "entity.name.tag.doctype.princess",
          "begin": "\\b(title:)\\b",
          "end": "\\n"
        }
      ]
    },
    "background": {
      "patterns": [
        {
          "name": "entity.name.tag.doctype.princess",
          "begin": "\\b(background:)\\b",
          "end": "\\n"
        }
      ]
    },
    "bgm": {
      "patterns": [
        {
          "name": "entity.name.tag.doctype.princess",
          "begin": "\\b(bgm:)\\b",
          "end": "\\n"
        }
      ]
    },
    "ambience": {
      "patterns": [
        {
          "name": "entity.name.tag.doctype.princess",
          "begin": "\\b(ambience:)\\b",
          "end": "\\n"
        }
      ]
    },
    "script": {
      "patterns": [
        {
          "name": "entity.name.tag.doctype.princess",
          "begin": "\\b(script\\:)\\b",
          "end": ":"
        }
      ]
    },
    "effect": {
      "patterns": [
        {
          "name": "entity.name.tag.doctype.princess",
          "begin": "\\b(effect:)\\b",
          "end": "\\n"
        }
      ]
    },
    "options": {
      "patterns": [
        {
          "name": "entity.name.tag.doctype.princess",
          "begin": "\\b(options)\\b",
          "end": ":"
        }
      ]
    },
    "change": {
      "patterns": [
        {
          "name": "entity.name.tag.doctype.princess",
          "begin": "\\b(change:)\\b",
          "end": "\\n"
        }
      ]
    }
  }
}
