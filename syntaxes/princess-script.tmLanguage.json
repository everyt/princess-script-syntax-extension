{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Princess Script",
  "scopeName": "source.princess",
  "fileTypes": ["princess"],
  "patterns": [
    {
      "name": "comment.princess",
      "begin": "//",
      "end": "\\n"
    },
    {
      "name": "comment.princess",
      "begin": "/\\*",
      "end": "\\*/"
    },
    {
      "name": "invalid.princess",
      "match": "^(scene)\\s*\\S*(?=:)"
    },
    {
      "name": "invalid.princess",
      "match": "^(end)\\b"
    },
    {
      "name": "support.function.princess",
      "match": "^\\s+(?<=(options|close|change|effect|title|background|bgm|ambience))\\S+(?=:)"
    },
    {
      "name": "support.function.princess",
      "match": "^\\s+(stage|script)\\s*\\S*(?=:)"
    },
    {
      "name": "entity.name.tag.doctype.princess",
      "match": "^\\s+(options|close|change|effect)(?!:)"
    },
    {
      "name": "entity.name.tag.doctype.princess",
      "match": "^\\s+(title|background|bgm|ambience)(?=:)"
    },
    {
      "name": "support.function.princess",
      "match": "^(const)\\s*\\S*(?=:)"
    },
    {
      "name": "invalid.illegal.princess",
      "match": "^\\s+\\S+(?=:)"
    }
  ]
}
