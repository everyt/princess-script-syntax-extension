{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Princess Script",
  "scopeName": "source.princess",
  "fileTypes": ["princess"],
  "patterns": [
    {
      "name": "comment.princess",
      "begin": "//",
      "end": "\\n"
    },
    {
      "name": "comment.princess",
      "begin": "/\\*",
      "end": "\\*/"
    },
    {
      "name": "invalid.princess",
      "match": "^(장면/)"
    },
    {
      "name": "support.function.princess",
      "match": "^\\s+(?<=(효과|선택지|종료|타이틀|배경화면|배경음악|환경음|스타일))\\S+(?=:)"
    },
    {
      "name": "support.function.princess",
      "match": "^\\s+(무대|대화|변수)\\s*\\S*(?=/)"
    },
    {
      "name": "entity.name.tag.doctype.princess",
      "match": "^\\s+(효과|선택지|종료)(?!:)"
    },
    {
      "name": "entity.name.tag.doctype.princess",
      "match": "^\\s+(타이틀|배경화면|배경음악|환경음|스타일)(?=:)"
    },
    {
      "name": "invalid.illegal.princess",
      "match": "^\\s+\\S+(?=:)"
    }
  ]
}
