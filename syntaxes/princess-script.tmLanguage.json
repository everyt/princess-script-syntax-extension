{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Princess Script",
  "scopeName": "source.princess",
  "fileTypes": ["princess"],
  "patterns": [
    {
      "include": "#expression"
    }
  ],
  "repository": {
    "expression": {
      "patterns": [
        { "include": "#comment" },
        { "include": "#scene" },
        { "include": "#end" },
        { "include": "#stage" },
        { "include": "#options" },
        { "include": "#title" },
        { "include": "#effect" }
      ]
    },
    "comment": {
      "patterns": [
        {
          "name": "comment.princess",
          "begin": "//",
          "end": "\\n"
        }
      ]
    },
    "scene": {
      "patterns": [
        {
          "name": "invalid.princess",
          "match": "^(scene)\\b"
        }
      ]
    },
    "end": {
      "patterns": [
        {
          "name": "invalid.princess",
          "match": "^(end)\\b"
        }
      ]
    },
    "stage": {
      "patterns": [
        {
          "name": "support.function.princess",
          "match": "^\\s*(stage|script)\\b"
        }
      ]
    },
    "options": {
      "patterns": [
        {
          "name": "support.function.princess",
          "match": "^\\s*(options)\\b"
        }
      ]
    },
    "title": {
      "patterns": [
        {
          "name": "entity.name.tag.doctype.princess",
          "match": "^\\s*(title|background|bgm|ambience)\\b"
        }
      ]
    },
    "effect": {
      "patterns": [
        {
          "name": "support.constant.meta.property-value.princess",
          "match": "^\\s*(effect|change)\\b"
        }
      ]
    }
  }
}
