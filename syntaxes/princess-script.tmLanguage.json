{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Princess Script",
  "scopeName": "source.princess",
  "fileTypes": ["princess"],
  "patterns": [
    {
      "name": "comment.princess",
      "begin": "//",
      "end": "$"
    },
    {
      "name": "comment.princess",
      "begin": "/\\*",
      "end": "\\*/"
    },
    {
      "name": "bold.princess",
      "match": "^(장면|끝)(?=/)"
    },
    {
      "name": "keyword.control.princess",
      "match": "^\\s+(무대|대화|변수)\\s*\\S*(?=/)"
    },
    {
      "name": "variable.other.property.princess",
      "match": "^\\s+(타이틀|배경화면|배경음악|환경음|스타일)\\s*(?=:)"
    },
    {
      "name": "string.regexp.princess",
      "match": "^\\s+'(.*?)'\\s*(?=:)"
    },
    {
      "name": "string.regexp.princess",
      "match": "^\\s+`(.*?)`\\s*(?=:)"
    },
    {
      "name": "string.regexp.princess",
      "match": "^\\s+\"(.*?)\"\\s*(?=:)"
    },
    {
      "name": "string.princess",
      "match": "^\\s+(?<!\"|'|`)\\S+(?=:)"
    },
    {
      "name": "string.regexp.princess",
      "begin": "^\\s+(효과|선택지|종료)\\s*'",
      "end": "'\\s*(?=;)",
      "beginCaptures": {
        "1": { "name": "variable.other.property.princess" }
      }
    },
    {
      "name": "string.regexp.princess",
      "begin": "^\\s+(효과|선택지|종료)\\s*`",
      "end": "`\\s*(?=;)",
      "beginCaptures": {
        "1": { "name": "variable.other.property.princess" }
      }
    },
    {
      "name": "string.regexp.princess",
      "begin": "^\\s+(효과|선택지|종료)\\s*\"",
      "end": "\"\\s*(?=;)",
      "beginCaptures": {
        "1": { "name": "variable.other.property.princess" }
      }
    },
    {
      "name": "string.princess",
      "begin": "^\\s+(효과|선택지|종료)\\s*",
      "end": "\\s*(?=;)",
      "beginCaptures": {
        "1": { "name": "variable.other.property.princess" }
      }
    },
    {
      "name": "string.quoted.double",
      "begin": "'",
      "end": "'"
    },
    {
      "name": "string.quoted.double",
      "begin": "\"",
      "end": "\""
    },
    {
      "name": "string.quoted.double",
      "begin": "`",
      "end": "`"
    }
  ]
}
